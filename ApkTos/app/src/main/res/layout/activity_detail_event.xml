<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailEvent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/kuningmuda"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEGIATAN:"
                    android:textColor="@color/navy"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNamaLaporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Kegiatan"
                    android:textColor="@color/navy"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TANGGAL KEGIATAN:"
                    android:textColor="@color/navy"
                    android:textSize="25dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTanggalKegiatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tanggal Kegiatan"
                    android:textColor="@color/navy"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESTIMASI BIAYA:"
                    android:textColor="@color/navy"
                    android:textSize="25dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAnggaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Anggaran"
                    android:textColor="@color/navy"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESKRIPSI KEGIATAN:"
                    android:textColor="@color/navy"
                    android:textSize="25dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Deskripsi"
                    android:textColor="@color/navy"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENANGGUNG JAWAB:"
                    android:textColor="@color/navy"
                    android:textSize="25dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvPenanggungJawab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Penanggung Jawab"
                    android:textColor="@color/navy"
                    android:textSize="20dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/butediteve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navy"
            android:background="@drawable/cusbut"
            android:text="EDIT"
            android:layout_marginStart="100dp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/buthpseve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/marun"
            android:background="@drawable/cusbut"
            android:text="HAPUS"
            android:textStyle="bold"
            android:layout_margin="5dp"/>


    </LinearLayout>
</LinearLayout>
